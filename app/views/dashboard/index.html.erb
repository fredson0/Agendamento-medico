<% content_for :title, "Dashboard" %>

<div class="dashboard-container">
  <!-- Header do Dashboard -->
  <div class="dashboard-header">
    <div class="welcome-section">
      <h1><i class="fas fa-tachometer-alt"></i> Dashboard</h1>
      <p class="welcome-text">
        Bem-vindo, <strong><%= current_usuario.username %></strong>
        <span class="date-info"><%= @data_atual %></span>
      </p>
    </div>
    
    <!-- Ações Rápidas -->
    <div class="quick-actions">
      <% case current_usuario.papel %>
      <% when 'admin', 'atendente' %>
        <%= link_to new_consulta_path, class: 'quick-action-btn primary' do %>
          <i class="fas fa-plus"></i>
          <span>Nova Consulta</span>
        <% end %>
        <%= link_to consultas_path, class: 'quick-action-btn secondary' do %>
          <i class="fas fa-list"></i>
          <span>Ver Consultas</span>
        <% end %>
      <% when 'paciente' %>
        <%= link_to agendamento_path, class: 'quick-action-btn primary' do %>
          <i class="fas fa-calendar-plus"></i>
          <span>Agendar</span>
        <% end %>
        <%= link_to consultas_path, class: 'quick-action-btn secondary' do %>
          <i class="fas fa-calendar-check"></i>
          <span>Minhas Consultas</span>
        <% end %>
      <% when 'medico' %>
        <%= link_to consultas_path, class: 'quick-action-btn primary' do %>
          <i class="fas fa-calendar-day"></i>
          <span>Minha Agenda</span>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Alertas -->
  <% if defined?(@alertas) && @alertas.any? %>
    <div class="alerts-section">
      <% @alertas.each do |alerta| %>
        <div class="alert alert-<%= alerta[:tipo] %>">
          <i class="fas <%= alerta[:tipo] == 'warning' ? 'fa-exclamation-triangle' : 'fa-info-circle' %>"></i>
          <%= alerta[:mensagem] %>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Estatísticas -->
  <div class="stats-grid">
    <% if current_usuario.papel == 'paciente' %>
      <!-- Stats para Paciente -->
      <div class="stat-card">
        <div class="stat-icon primary">
          <i class="fas fa-calendar-check"></i>
        </div>
        <div class="stat-content">
          <div class="stat-number"><%= @stats[:consultas_agendadas] %></div>
          <div class="stat-label">Consultas Agendadas</div>
        </div>
      </div>
      
      <div class="stat-card">
        <div class="stat-icon success">
          <i class="fas fa-history"></i>
        </div>
        <div class="stat-content">
          <div class="stat-number"><%= @stats[:consultas_realizadas] %></div>
          <div class="stat-label">Consultas Realizadas</div>
        </div>
      </div>
      
      <% if @stats[:ultima_consulta] %>
        <div class="stat-card">
          <div class="stat-icon info">
            <i class="fas fa-clock"></i>
          </div>
          <div class="stat-content">
            <div class="stat-number"><%= l @stats[:ultima_consulta], format: :short %></div>
            <div class="stat-label">Última Consulta</div>
          </div>
        </div>
      <% end %>
      
    <% else %>
      <!-- Stats para Admin/Médico -->
      <div class="stat-card">
        <div class="stat-icon primary">
          <i class="fas fa-calendar-day"></i>
        </div>
        <div class="stat-content">
          <div class="stat-number"><%= @stats[:consultas_hoje] %></div>
          <div class="stat-label">Consultas Hoje</div>
        </div>
      </div>
      
      <div class="stat-card">
        <div class="stat-icon warning">
          <i class="fas fa-calendar-week"></i>
        </div>
        <div class="stat-content">
          <div class="stat-number"><%= @stats[:consultas_semana] %></div>
          <div class="stat-label">Esta Semana</div>
        </div>
      </div>
      
      <div class="stat-card">
        <div class="stat-icon info">
          <i class="fas fa-calendar-alt"></i>
        </div>
        <div class="stat-content">
          <div class="stat-number"><%= @stats[:consultas_mes] %></div>
          <div class="stat-label">Este Mês</div>
        </div>
      </div>
      
      <% if current_usuario.papel.in?(['admin', 'atendente']) %>
        <div class="stat-card">
          <div class="stat-icon success">
            <i class="fas fa-users"></i>
          </div>
          <div class="stat-content">
            <div class="stat-number"><%= @stats[:pacientes_ativos] %></div>
            <div class="stat-label">Pacientes Ativos</div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <!-- Grid Principal -->
  <div class="dashboard-grid">
    
    <!-- Próximas Consultas -->
    <div class="dashboard-card">
      <div class="card-header">
        <h3><i class="fas fa-clock"></i> 
          <%= current_usuario.papel == 'paciente' ? 'Suas Próximas Consultas' : 'Próximas Consultas' %>
        </h3>
        <% if @consultas_proximas.any? %>
          <span class="card-badge"><%= @consultas_proximas.count %></span>
        <% end %>
      </div>
      <div class="card-content">
        <% if @consultas_proximas.any? %>
          <div class="consultas-timeline">
            <% @consultas_proximas.each do |consulta| %>
              <div class="timeline-item">
                <div class="timeline-time">
                  <div class="time"><%= consulta.inicio.strftime('%H:%M') %></div>
                  <div class="date"><%= l consulta.inicio.to_date, format: :short %></div>
                </div>
                <div class="timeline-content">
                  <div class="timeline-title">
                    <% if current_usuario.papel == 'medico' %>
                      <strong><%= consulta.paciente.nome %></strong>
                    <% elsif current_usuario.papel == 'paciente' %>
                      <strong>Dr(a). <%= consulta.medico.nome %></strong>
                    <% else %>
                      <strong><%= consulta.paciente.nome %></strong> com <strong><%= consulta.medico.nome %></strong>
                    <% end %>
                  </div>
                  <div class="timeline-details">
                    <span class="detail-item">
                      <i class="fas fa-hospital"></i>
                      <%= consulta.unidade.nome %>
                    </span>
                    <% if consulta.especialidade %>
                      <span class="detail-item">
                        <i class="fas fa-stethoscope"></i>
                        <%= consulta.especialidade.nome %>
                      </span>
                    <% end %>
                    <%= status_badge(consulta.status) %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
          <div class="card-footer">
            <%= link_to consultas_path, class: 'btn-link' do %>
              Ver todas as consultas <i class="fas fa-arrow-right"></i>
            <% end %>
          </div>
        <% else %>
          <div class="empty-state">
            <i class="fas fa-calendar-times"></i>
            <p>Nenhuma consulta agendada</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Agenda de Hoje (para médicos e admin) -->
    <% if defined?(@consultas_hoje) && current_usuario.papel != 'paciente' %>
      <div class="dashboard-card">
        <div class="card-header">
          <h3><i class="fas fa-calendar-day"></i> Agenda de Hoje</h3>
          <% if @consultas_hoje.any? %>
            <span class="card-badge"><%= @consultas_hoje.count %></span>
          <% end %>
        </div>
        <div class="card-content">
          <% if @consultas_hoje.any? %>
            <div class="agenda-today">
              <% @consultas_hoje.each do |consulta| %>
                <div class="agenda-item <%= 'completed' if consulta.status == 'concluida' %>">
                  <div class="agenda-time">
                    <%= consulta.inicio.strftime('%H:%M') %>
                  </div>
                  <div class="agenda-content">
                    <div class="agenda-patient">
                      <%= consulta.paciente.nome %>
                    </div>
                    <div class="agenda-details">
                      <% if current_usuario.papel != 'medico' %>
                        Dr(a). <%= consulta.medico.nome %> •
                      <% end %>
                      <%= consulta.unidade.nome %>
                    </div>
                  </div>
                  <div class="agenda-status">
                    <%= status_badge(consulta.status) %>
                  </div>
                </div>
              <% end %>
            </div>
            
            <% if defined?(@consultas_por_status) && @consultas_por_status.any? %>
              <div class="status-summary">
                <small>
                  <% @consultas_por_status.each do |status, count| %>
                    <span class="status-count">
                      <%= status_text(status) %>: <strong><%= count %></strong>
                    </span>
                  <% end %>
                </small>
              </div>
            <% end %>
          <% else %>
            <div class="empty-state">
              <i class="fas fa-calendar-check"></i>
              <p>Nenhuma consulta hoje</p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

    <!-- Médicos -->
    <div class="dashboard-card">
      <div class="card-header">
        <h3><i class="fas fa-user-md"></i> 
          <%= current_usuario.papel == 'paciente' ? 'Seus Médicos' : 'Médicos Ativos' %>
        </h3>
      </div>
      <div class="card-content">
        <% if @medicos.any? %>
          <div class="doctors-list">
            <% @medicos.each do |medico| %>
              <div class="doctor-item">
                <div class="doctor-avatar">
                  <i class="fas fa-user-md"></i>
                </div>
                <div class="doctor-info">
                  <div class="doctor-name"><%= medico.nome %></div>
                  <div class="doctor-specialty">
                    <%= medico.especialidades.pluck(:nome).join(', ') %>
                  </div>
                </div>
                <div class="doctor-status">
                  <span class="status-indicator active"></span>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="empty-state">
            <i class="fas fa-user-md"></i>
            <p>Nenhum médico encontrado</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Perfil do Paciente (apenas para pacientes) -->
    <% if current_usuario.papel == 'paciente' && @paciente %>
      <div class="dashboard-card">
        <div class="card-header">
          <h3><i class="fas fa-user"></i> Seus Dados</h3>
        </div>
        <div class="card-content">
          <div class="profile-info">
            <div class="profile-avatar">
              <i class="fas fa-user"></i>
            </div>
            <div class="profile-details">
              <div class="profile-item">
                <span class="label">Nome:</span>
                <span class="value"><%= @paciente.nome %></span>
              </div>
              <div class="profile-item">
                <span class="label">CPF:</span>
                <span class="value"><%= @paciente.cpf %></span>
              </div>
              <% if @paciente.email.present? %>
                <div class="profile-item">
                  <span class="label">Email:</span>
                  <span class="value"><%= @paciente.email %></span>
                </div>
              <% end %>
              <% if @paciente.telefone.present? %>
                <div class="profile-item">
                  <span class="label">Telefone:</span>
                  <span class="value"><%= @paciente.telefone %></span>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Lista de Pacientes (para admin/atendente) -->
    <% if current_usuario.papel.in?(['admin', 'atendente']) && @pacientes %>
      <div class="dashboard-card">
        <div class="card-header">
          <h3><i class="fas fa-users"></i> Pacientes Recentes</h3>
        </div>
        <div class="card-content">
          <% if @pacientes.any? %>
            <div class="patients-list">
              <% @pacientes.each do |paciente| %>
                <div class="patient-item">
                  <div class="patient-avatar">
                    <i class="fas fa-user"></i>
                  </div>
                  <div class="patient-info">
                    <div class="patient-name"><%= paciente.nome %></div>
                    <div class="patient-details">CPF: <%= paciente.cpf %></div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="empty-state">
              <i class="fas fa-users"></i>
              <p>Nenhum paciente cadastrado</p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

  </div>
</div>

