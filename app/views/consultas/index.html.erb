<% content_for :title, "Consultas" %>

<div class="page-header">
  <div class="page-header-left">
    <h1><i class="fas fa-calendar-check"></i> Consultas</h1>
    <p class="subtitle">Gerencie e visualize as consultas médicas</p>
  </div>
  <div class="page-header-right">
    <% if current_usuario.papel.in?(['admin', 'atendente']) %>
      <%= link_to new_consulta_path, class: 'btn btn-primary' do %>
        <i class="fas fa-plus"></i> Nova Consulta
      <% end %>
    <% end %>
  </div>
</div>

<!-- Filtros -->
<div class="filters-card">
  <%= form_with url: consultas_path, method: :get, class: 'filters-form', local: true do |f| %>
    <div class="filters-grid">
      <div class="filter-group">
        <%= f.label :status, "Status:", class: 'filter-label' %>
        <%= f.select :status, options_for_select(@status_options, params[:status]), 
                     { prompt: false }, 
                     { class: 'filter-select', onchange: 'this.form.submit()' } %>
      </div>
      
      <% if current_usuario.papel.in?(['admin', 'atendente']) %>
        <div class="filter-group">
          <%= f.label :medico_id, "Médico:", class: 'filter-label' %>
          <%= f.select :medico_id, 
                       options_from_collection_for_select(@medicos, :id, :nome, params[:medico_id]),
                       { prompt: 'Todos' },
                       { class: 'filter-select', onchange: 'this.form.submit()' } %>
        </div>
      <% end %>
      
      <div class="filter-group">
        <%= f.label :tipo, "Tipo:", class: 'filter-label' %>
        <%= f.select :tipo, options_for_select(@tipo_options, params[:tipo]), 
                     { prompt: false }, 
                     { class: 'filter-select', onchange: 'this.form.submit()' } %>
      </div>
      
      <div class="filter-group">
        <%= f.label :data_inicio, "De:", class: 'filter-label' %>
        <%= f.date_field :data_inicio, value: params[:data_inicio], 
                         class: 'filter-input', onchange: 'this.form.submit()' %>
      </div>
      
      <div class="filter-group">
        <%= f.label :data_fim, "Até:", class: 'filter-label' %>
        <%= f.date_field :data_fim, value: params[:data_fim], 
                         class: 'filter-input', onchange: 'this.form.submit()' %>
      </div>
      
      <div class="filter-group">
        <%= link_to 'Limpar Filtros', consultas_path, class: 'btn btn-outline' %>
      </div>
    </div>
  <% end %>
</div>

<!-- Resumo -->
<div class="summary-stats">
  <div class="stat-card">
    <i class="fas fa-calendar-day"></i>
    <div class="stat-info">
      <span class="stat-number"><%= @consultas.count %></span>
      <span class="stat-label">Consultas</span>
    </div>
  </div>
  
  <div class="stat-card">
    <i class="fas fa-check-circle text-success"></i>
    <div class="stat-info">
      <span class="stat-number"><%= @consultas.where(status: 'confirmada').count %></span>
      <span class="stat-label">Confirmadas</span>
    </div>
  </div>
  
  <div class="stat-card">
    <i class="fas fa-clock text-warning"></i>
    <div class="stat-info">
      <span class="stat-number"><%= @consultas.where(status: 'marcada').count %></span>
      <span class="stat-label">Pendentes</span>
    </div>
  </div>
  
  <div class="stat-card">
    <i class="fas fa-video text-info"></i>
    <div class="stat-info">
      <span class="stat-number"><%= @consultas.where(tipo: 'teleconsulta').count %></span>
      <span class="stat-label">Teleconsultas</span>
    </div>
  </div>
</div>

<!-- Lista de Consultas -->
<div class="consultas-container">
  <% if @consultas.any? %>
    <div class="consultas-grid">
      <% @consultas.each do |consulta| %>
        <div class="consulta-card <%= status_card_class(consulta.status) %>">
          <div class="consulta-header">
            <div class="consulta-datetime">
              <i class="fas fa-calendar"></i>
              <span class="date"><%= l consulta.inicio.to_date, format: :long %></span>
              <span class="time"><%= consulta.inicio.strftime('%H:%M') %> - <%= consulta.fim.strftime('%H:%M') %></span>
            </div>
            <div class="consulta-status">
              <%= status_badge(consulta.status) %>
            </div>
          </div>
          
          <div class="consulta-body">
            <div class="consulta-participants">
              <div class="participant">
                <i class="fas fa-user-injured"></i>
                <div class="participant-info">
                  <span class="label">Paciente</span>
                  <span class="name"><%= consulta.paciente.nome %></span>
                </div>
              </div>
              
              <div class="participant">
                <i class="fas fa-user-md"></i>
                <div class="participant-info">
                  <span class="label">Médico</span>
                  <span class="name"><%= consulta.medico.nome %></span>
                  <% if consulta.especialidade %>
                    <span class="specialty"><%= consulta.especialidade.nome %></span>
                  <% end %>
                </div>
              </div>
            </div>
            
            <div class="consulta-details">
              <div class="detail-item">
                <i class="fas fa-hospital"></i>
                <span><%= consulta.unidade.nome %></span>
              </div>
              
              <% if consulta.sala %>
                <div class="detail-item">
                  <i class="fas fa-door-open"></i>
                  <span><%= consulta.sala.nome %></span>
                </div>
              <% end %>
              
              <div class="detail-item">
                <%= tipo_icon(consulta.tipo) %>
                <span><%= consulta.tipo.capitalize %></span>
              </div>
            </div>
            
            <% if consulta.observacoes.present? %>
              <div class="consulta-notes">
                <i class="fas fa-sticky-note"></i>
                <span><%= truncate(consulta.observacoes, length: 80) %></span>
              </div>
            <% end %>
          </div>
          
          <div class="consulta-actions">
            <%= link_to consulta_path(consulta), class: 'btn btn-outline btn-sm' do %>
              <i class="fas fa-eye"></i> Ver Detalhes
            <% end %>
            
            <% if can_edit_consulta?(consulta) %>
              <%= link_to '#', class: 'btn btn-outline btn-sm' do %>
                <i class="fas fa-edit"></i> Editar
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="empty-state">
      <i class="fas fa-calendar-times"></i>
      <h3>Nenhuma consulta encontrada</h3>
      <p>Não há consultas que correspondam aos filtros selecionados.</p>
      <% if current_usuario.papel.in?(['admin', 'atendente']) %>
        <%= link_to 'Criar Nova Consulta', new_consulta_path, class: 'btn btn-primary' %>
      <% end %>
    </div>
  <% end %>
</div>

