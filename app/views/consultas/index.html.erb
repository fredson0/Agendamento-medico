    gap: 16px;
  }
  
  .filters-grid {
    grid-template-columns: 1fr;
  }
  
  .summary-stats {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .consulta-participants {
    grid-template-columns: 1fr;
  }
  
  .consultas-grid {
    grid-template-columns: 1fr;
  }
}
</style>
